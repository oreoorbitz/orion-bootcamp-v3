{%- assign p = producto -%}
<article class="border rounded overflow-hidden bg-white">
  <a href="/products/{{ p.handle }}" class="block">
    {{ p.image
      | image_url: width: 'medium'
      | image_tag: class: 'w-full aspect-square object-cover', alt: p.title | strip_html }}
  </a>
  <div class="p-3">
    <a href="/products/{{ p.handle }}" class="block text-sm font-semibold hover:underline">
      {{ p.title }}
    </a>
    <div class="text-gray-700 text-sm mt-1">{{ p.price | money }}</div>
  </div>
</article>
