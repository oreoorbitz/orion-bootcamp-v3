<section class="p-0 bg-white rounded shadow overflow-hidden">
    <!-- Header banner with collection image -->
    <div class="w-full">
      {% assign alt = collections["soft-shirts"].title | strip_html %}
      {{ collections["soft-shirts"].image | image_url: width: 'large' | image_tag: class: 'w-full h-48 md:h-64 object-cover', alt: alt, width: collections["soft-shirts"].image.width, height: collections["soft-shirts"].image.height }}
    </div>
  
    <div class="p-6">
      <h1 class="text-2xl font-bold mb-4">{{ section.settings.title }}</h1>
  
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
        {% for product in collections["soft-shirts"].products %}
          {% render '45_product_card', producto: product %}
        {% endfor %}
      </div>
  
      <div class="mt-6">
        <a href="/collections/soft-shirts" class="inline-block px-4 py-2 bg-blue-600 text-white rounded">
          {{ 'actions.view' | t }}
        </a>
      </div>
    </div>
  </section>
  
  {% schema %}
  {
    "settings": [
      { "type": "text", "id": "title", "label": "TÃ­tulo" }
    ]
  }
  {% endschema %}
  