<h1>Bienvenido a nuestra tienda</h1>

{% for collection in collections %}
  <section class="coleccion">
    <h2>{{ collection.title }}</h2>
    <ul>
      {% for producto in collection.products %}
        <li class="producto">
          <h3>{{ producto.title }}</h3>
          <p>ID: {{ producto.id }}</p>
          <p>Handle: {{ producto.handle }}</p>
          <p>Precio: ${{ producto.precio | money }}</p>
        </li>
      {% endfor %}
    </ul>
  </section>
{% endfor %}
